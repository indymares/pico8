pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
function _init()
		easy=10
		medium=7
		hard=7
		os="easy"
		selected=0
end

function _update()
		
--checks down
		if btnp(⬇️) then 
				if selected == 2 then
				  selected = 0
				else
				  selected = selected + 1
			 end	
		end
		
--checks up
		if btnp(⬆️) then 
				if selected == 0 then
				  selected = 2
				else
				  selected = selected - 1
				end
		end
		
		if selected == 0 then
		  easy = 10
		  medium = 7
		  hard = 7
		end
		
		if selected == 1 then
		  easy = 7
		  medium = 10
		  hard = 7
		end
		
		if selected == 2 then
		  easy = 7
		  medium = 7
		  hard = 10
		end
end

function _draw()
		cls()
		spr(1,55,45)
		print("easy",53,55,easy)
		print("medium",50,65,medium)
		print("hard",53,75,hard)
end
